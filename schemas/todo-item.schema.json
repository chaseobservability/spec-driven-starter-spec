{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TodoItem",
  "type": "object",
  "required": [
    "id",
    "title",
    "completed"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "completed": {
      "type": "boolean"
    },
    "dueDate": {
      "type": "string",
      "format": "date"
    }
  }
}
